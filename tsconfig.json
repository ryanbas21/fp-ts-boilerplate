{
  "compilerOptions": {
    "module": "commonjs",
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "app/*": ["./src/*"],
      "tests/*": ["./tests/*"],
      "core/*": ["./src/core/*"],
      "tasks/*": ["./src/tasks/*"]
    }
  },
  "include": [
    "src/**/*",
    "tests/**/*"
  ]
}
