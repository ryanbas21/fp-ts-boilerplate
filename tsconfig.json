{
  "compilerOptions": {
    "module": "commonjs",
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "noImplicitAny": false,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "app/*": ["./src/*"],
      "core/*": ["./src/core/*"]
    }
  },
  "include": [
    "src/**/*"
  ]
}
